{
  "name": "pocket-wallet",
  "version": "0.1.0",
  "description": "Official lite wallet of Pocket Foundation.",
  "main": "./src-back/index.js",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "start-app": "electron .",
    "build": "react-scripts build",
    "build-native-win": "npm run native-build-prep && electron-builder --dir --win --publish never",
    "pack-native-win": "npm run native-build-prep && electron-builder --win --publish never",
    "native-build-prep": "node ./native-build-scripts/clear-build-dir.js && npm run build && node ./native-build-scripts/copy-files.js && cd temp && npm install --production && cd ..",
    "test-front": "react-scripts test",
    "test-back": "mocha ./test-back/tests.js",
    "test-all": "npm run test-front && npm run test-back",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "electron-context-menu": "^3.1.1",
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0",
    "electron-updater": "^4.3.9",
    "fs-extra": "^10.0.0",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rmrf-promise": "^1.1.0",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "electron": "15.3.0",
    "electron-builder": "^22.13.1",
    "mocha": "^9.1.3",
    "node-sass": "^5.0.0",
    "react-scripts": "4.0.3",
    "should": "^13.2.3",
    "typescript": "^4.1.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pokt-foundation/dl-wallet.git"
  },
  "author": "Ryan Burgett <ryan@burgettdev.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pokt-foundation/dl-wallet/issues"
  },
  "build": {
    "electronVersion": "15.3.0",
    "appId": "network.pokt.pocket-wallet",
    "productName": "Pocket Wallet",
    "artifactName": "pocket-wallet-${version}-${os}-${arch}.${ext}",
    "copyright": "Copyright Â© 2021 by Pocket Foundation",
    "directories": {
      "app": "temp",
      "output": "build-native"
    },
    "extends": null,
    "win": {
      "artifactName": "pocket-wallet-${version}-${os}-${arch}.${ext}",
      "verifyUpdateCodeSignature": false,
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./public/favicon.ico",
      "publish": {
        "provider": "github",
        "releaseType": "draft"
      }
    },
    "mac": {},
    "linux": {
      "target": [
        {
          "target": "appImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./public/images/linux/",
      "synopsis": "Official lite wallet of Pocket Foundation.",
      "description": "Official lite wallet of Pocket Foundation.",
      "category": "Utility",
      "desktop": {
        "Name": "Pocket Wallet"
      },
      "publish": {
        "provider": "github",
        "releaseType": "draft"
      }
    }
  }
}
